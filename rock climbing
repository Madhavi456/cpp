#include <iostream>
using namespace std;

int countWays(int n, int i, int x) {
    if (i > n) {
        return 0;
    }
    if (i == n) {
        return 1; 
    }

    int ways = 0;
    for (int j = 1; j <= x; j++) {
        if (i + j <= n) {
            ways += countWays(n, i + j, x);
        }
    }

    return ways;
}

int main() {
    int N, I, X;

    cin >> N >> I >> X;

    int ways = countWays(N, I, X);
    cout << ways << endl;

    return 0;
}
